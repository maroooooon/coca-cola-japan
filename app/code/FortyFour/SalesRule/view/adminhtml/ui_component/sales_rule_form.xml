<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="actions">
        <field name="max_allowed_discount" formElement="input" sortOrder="2">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">sales_rule</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Max Allowed Discount Amount</label>
                <dataScope>max_allowed_discount</dataScope>
                <tooltip>
                    <description>Only relative to the "Percent of product price or max allowed discount" rule</description>
                </tooltip>
            </settings>
        </field>
    </fieldset>
</form>

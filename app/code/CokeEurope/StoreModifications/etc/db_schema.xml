<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="quote_item" resource="checkout" comment="Sales Flat Quote Item">
        <column xsi:type="tinyint" name="moderation_status" nullable="true"
                comment="Moderation Status"/>
        <column xsi:type="varchar" name="coke_layout_id"  nullable="true"
                comment="Coke Layout Id"/>
    </table>
    <table name="sales_order_item" resource="sales" comment="Sales Flat Order Item">
        <column xsi:type="tinyint" name="moderation_status" nullable="true"
                comment="Moderation Status"/>
        <column xsi:type="varchar" name="coke_layout_id" nullable="true"
                comment="Coke Layout Id"/>
    </table>
</schema>
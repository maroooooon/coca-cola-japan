<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
	<system>
		<section id="coke_europe" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
			<tab>Coke</tab>
			<resource>CokeEurope_AgeRestriction::config_cokeeurope_agerestriction</resource>
			<group id="age_restriction" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
				<label>Age Restricted Checkout</label>
				<field id="enabled" type="select" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
					<label>Enabled</label>
					<comment>Select yes to enable age restriction for checkout.</comment>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
				<field id="minimum_age" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Minimum Age</label>
					<comment>Set the minimum age required for checkout.</comment>
				</field>
			</group>
		</section>
	</system>
</config>

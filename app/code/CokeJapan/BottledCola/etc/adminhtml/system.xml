<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="coke_bundledControls" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="400" translate="label">
            <label>Bundled Controls</label>
            <tab>Coke</tab>
            <resource>Magento_Backend::admin</resource>
            <group id="bundled_controls" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label">
                <label>Bundled Controls</label>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Module Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="bundled_controls_sku" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label" type="text">
                    <label>bundled_controls_sku</label>
                </field>
            </group>
        </section>
        <section id="coke_japan" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="400" translate="label">
            <label>Japan</label>
            <tab>Coke</tab>
            <resource>Magento_Backend::admin</resource>
            <group id="StoreName" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label">
                <label>StoreName</label>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Japan Store Judgment</label>
                    <comment>Japan Store Judgment. Always valid for Japan Store.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>

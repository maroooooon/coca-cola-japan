<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="cashondelivery">
                <field id="set_is_in_process" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Set as Processing After Order is Placed</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>If this is enabled, the "New Order Status" field is ignored and the order status will be updated to "Processing" when placed.</comment>
                </field>
            </group>
        </section>
    </system>
</config>

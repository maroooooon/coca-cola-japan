<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="customer_entity">
        <column xsi:type="varchar" name="email" nullable="true" length="300" comment="Updated Email Column with 300 length"/>
        <column xsi:type="varchar" name="original_email" nullable="true" length="255" comment="Original email when a customer is soft deleted."/>
    </table>
</schema>

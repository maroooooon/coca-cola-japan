<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setCssClass">
                <argument name="cssClass" xsi:type="string">aw-sarp2__title</argument>
            </action>
            <block class="Aheadworks\Sarp2\Block\BackLink"
                   name="customer.account.link.back"
                   cacheable="false"/>
        </referenceBlock>
        <referenceBlock name="customer_account_navigation">
            <action method="setActive">
                <argument name="path" xsi:type="string">aw_sarp2/profile</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Coke\Sarp2\Block\Customer\Subscriptions\Edit\Address"
                   name="coke_sarp2.customer.subscriptions.edit.address"
                   template="customer/subscriptions/edit/billing_address.phtml" cacheable="false">
                <arguments>
                    <argument name="billing_address_view_model"
                              xsi:type="object">Coke\Sarp2\ViewModel\BillingAddress</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>

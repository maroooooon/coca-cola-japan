<script>
require([
    'jquery',
    'domReady!'
], function ($) {

    $('.qty-input').keydown(function (e) {
        if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 190]) !== -1 ||
            (e.keyCode == 65 && e.ctrlKey === true) ||
            (e.keyCode >= 35 && e.keyCode <= 39)) {
            return;
        }

        if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
            e.preventDefault();
        }
    });

    $('.btn-number').on('click', function(e) {
        e.preventDefault();

        var fieldName = $(this).data('field');
        var input = $("input[name='" + fieldName + "']");
        var type = $(this).data('type');
        var currentVal = parseInt(input.val());
        var minValue = !isNaN(input.attr('min')) ? parseInt(input.attr('min')) : 1;
        var maxValue = !isNaN(input.attr('max')) ? parseInt(input.attr('max')) : 999;
        var oldValue = input.data('old-value');
        var updateField = $(".update-cart-qty-action[data-update='" + fieldName + "']");

        if (isNaN(currentVal)) {
            input.val(0);
            return;
        }

        if (type == 'minus') {
            if (currentVal > minValue) {
                input.val(currentVal - 1).change();
            }
            if (parseInt(input.val()) == minValue) {
                $(this).attr('disabled', true);
            }
        } else if (type == 'plus') {
            if (currentVal < maxValue) {
                input.val(currentVal + 1).change();
            }
            if (parseInt(input.val()) == maxValue) {
                $(this).attr('disabled', true);
            }
        }

        if (currentVal >= minValue) {
            $(".btn-number[data-type='minus'][data-field='" + fieldName + "']").removeAttr('disabled')
        }

        if (currentVal <= maxValue) {
            $(".btn-number[data-type='plus'][data-field='" + fieldName + "']").removeAttr('disabled')
        }

        var newVal = parseInt(input.val());

        if (newVal != oldValue) {
            updateField.addClass('show')
        } else {
            updateField.removeClass('show')
        }
    });

});
</script>

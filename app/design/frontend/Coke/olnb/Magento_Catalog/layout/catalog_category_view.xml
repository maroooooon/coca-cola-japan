<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="css/slick.css" />
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">What's Your Resolution?</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="list" template="Magento_Catalog::product/list.phtml">
                <block class="Magento\Catalog\Block\Product\ListProduct" name="list-products" template="Magento_Catalog::product/list/products.phtml">
                    <arguments>
                        <argument xsi:type="object" name="vm_olnb">Coke\OLNB\Block\Catalog\ProductList</argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
        <referenceContainer name="div.sidebar.main" remove="true" />
        <referenceBlock name="category.products.list" remove="true" />
        <move element="page.main.title" destination="list" before="-" />
    </body>
</page>

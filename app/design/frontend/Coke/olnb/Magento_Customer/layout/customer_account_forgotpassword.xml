<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="main.container" htmlClass="container--xxs" />
        <referenceContainer name="page.wrapper">
            <block class="Magento\Framework\View\Element\Template" name="pdp-back" template="Magento_Theme::html/back.phtml" before='main.content'>
                <arguments>
                    <argument name="label" xsi:type="string">Back</argument>
                    <argument name="link" xsi:type="string">customer/account</argument>
                    <argument name="sticky" xsi:type="boolean">true</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>

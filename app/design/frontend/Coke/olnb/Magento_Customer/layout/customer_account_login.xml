<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="main.container" htmlClass="container--xxs" />
        <referenceBlock name="customer.new" remove="true" />
        <move element="page.main.title" destination="customer.login.container" before="-" />
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Checkout With Your Account</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="customer_form_login">
            <arguments>
                <argument name="resolution_view_model" xsi:type="object">Coke\OLNB\ViewModel\Resolutions</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>

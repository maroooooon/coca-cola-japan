<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
   <body>
      <referenceBlock name="product.attributes" remove="true" />
      <referenceBlock name="product.info.stock.sku" remove="true" />

      <referenceBlock name="product.attributes.wrapper" remove="true" />

      <move element="product.info.overview" destination="product.info.main" after="page.main.title" />

      <referenceContainer name="content">
         <container name="product.bottom.container" htmlTag="div" htmlClass="product-bottom-container" label="Product Bottom Container (TopoChico Greece Only)" after="-" />
      </referenceContainer>
   </body>
</page>

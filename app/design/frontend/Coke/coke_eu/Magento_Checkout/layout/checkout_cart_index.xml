<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Your Cart</argument>
            </action>
        </referenceBlock>

        <referenceBlock name="checkout.cart.item.renderers.default.actions.edit" remove="true" />
        <referenceBlock name="checkout.cart.item.renderers.simple.actions.edit" remove="true" />
        <referenceBlock name="checkout.cart.item.renderers.configurable.actions.edit" remove="true" />

        <referenceBlock name="checkout.cart.item.renderers.default.actions.gift_options" remove="true" />
        <referenceBlock name="checkout.cart.item.renderers.simple.actions.gift_options" remove="true" />
        <referenceBlock name="checkout.cart.item.renderers.bundle.actions.gift_options" remove="true" />
        <referenceBlock name="checkout.cart.item.renderers.grouped.actions.gift_options" remove="true" />
        <referenceBlock name="checkout.cart.item.renderers.configurable.actions.gift_options" remove="true" />

        <referenceContainer name="cart.summary">
            <block name="free.shipping.banner" class="Magento\Checkout\Block\Cart" template="Magento_Checkout::free-shipping-banner.phtml" as="free_shipping_banner" after="checkout.cart.summary.title"/>
            <block class="Magento\Framework\View\Element\Template" name="cart.payment.cards" template ="Magento_Checkout::cards.phtml" after="-" />
        </referenceContainer>

        <referenceContainer name="checkout.cart.totals.container">
            <referenceBlock name="checkout.cart.totals">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="block-totals" xsi:type="array">
                                <item name="children" xsi:type="array">
                                    <item name="subtotal" xsi:type="array">
                                        <item name="config" xsi:type="array">
                                            <item name="subtitle" xsi:type="string" translate="true">estimated</item>
                                        </item>
                                    </item>
                                    <item name="shipping" xsi:type="array">
                                        <item name="config" xsi:type="array">
                                            <item name="subtitle" xsi:type="string" translate="true">estimated</item>
                                        </item>
                                    </item>
                                    <item name="tax" xsi:type="array">
                                        <item name="config" xsi:type="array">
                                            <item name="title" xsi:type="string" translate="true">Taxes</item>
                                            <item name="subtitle" xsi:type="string" translate="true">included</item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </referenceBlock>
        </referenceContainer>

    </body>
</page>
